        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="io.rmiri.buttonloadingsample.MainActivity"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="io.rmiri.buttonloadingsample.SampleOne" />
        <activity android:name="io.rmiri.buttonloadingsample.SampleTwo" />
    </application>

</manifest>